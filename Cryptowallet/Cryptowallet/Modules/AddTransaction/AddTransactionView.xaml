<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cryptowallet.Modules.AddTransaction.AddTransactionView"
             xmlns:converters="clr-namespace:Cryptowallet.Common.Converters"
             Shell.TabBarIsVisible="False">
    <ContentPage.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Transaction Type"
               Padding="10, 16, 10, 0"/>
            <RadioButton Content="Deposited"
                         IsChecked="{Binding IsDeposit}"
                         Margin="16, 0, 0, 0" />                
                <RadioButton Content="Withdraw"
                         IsChecked="{Binding IsDeposit, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"
                         Margin="16, 0, 0, 0" />
            <Label Text="Select Asset"
               Padding="10, 10, 10, 0" />
            <CollectionView ItemsSource="{Binding AvailableAssets}"
                            ItemsLayout="HorizontalList"
                            SelectionMode="Single"
                            HeightRequest="100"
                            SelectedItem="{Binding SelectedCoin}"
                            ItemTemplate="{StaticResource CoinCell}" />
            <Label Text="Amount"
                   Margin="16, 10, 16, 0" />
            <Entry Style="{StaticResource Input}"
                   Text=""
                   Keyboard="Numeric"
                   Margin="16, 0, 16, 0" />
            <Label Text=""
                   Style="{StaticResource ValidationErrorLabel}"
                   Margin="16, 0, 24, 0" />
            <Label Text="Transaction Date"
                   Margin="16, 10, 16, 0" />
            <DatePicker Margin="16, 0, 16, 0"
                        Date="{Binding TransactionDate}" />
            <Button Style="{StaticResource BlueButton}"
                    Margin="28"
                    WidthRequest="240"
                    Text="Add"
                    Command="{Binding AddTransactionCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>